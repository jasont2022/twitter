<div class="section">
  <div class="container">
    <h2 class="title is-2 text-center" style="color:#0088be;"><%= @user.name %></h2>
    <div class="card border-primary mb-3">
      <div class="card-body text-primary">
        <% if @user.avatar.attached? %>
            <img src="<%= url_for(@user.avatar) %>%"/>
        <% else %>
            <%= image_tag("avatar.jpg") %>
        <% end %>
        <p style="margin-bottom: 0px;"><strong><%= @user.name%></strong></p>
        <p style="margin-bottom: 0px;"><%= @user.username %></p>
        <p style="margin-bottom: 5px;"><%= @user.email %></p>
        <p>Joined <%= @user.created_at %></p>
        <%= link_to user_path(@user) do %>
          <p><strong><%= @user.followings.count %></strong> Following</p>
        <% end %>
        <%= link_to user_path(@user) do %>
          <p><strong><%= @user.followers.count %></strong> Followers</p>
         <% end %>
        <% if @user == current_user %>
          <%= button_to 'Edit Profile', '/accounts/edit', method: :get, class: "btn btn-outline-primary"%>
        <% else %>
          <% if current_user.followings.include?(@user)%>
              <%= button_to 'Following', user_path(@user), method: :get, class: "btn btn-primary" %>
          <% else %>
              <%= button_to 'Follow', user_path(@user), method: :get, class: "btn btn-outline-primary" %>
          <% end %>
        <% end %>
          </div>
        </div>

      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Tweets</th>
          </tr>
        </thead>
        <tbody>
          <% @tweets.each do |tweet| %>
            <tr>
              <td>
                <%= link_to user_tweet_path(@user, tweet) do %>
                <% if @user.avatar.attached? %>
                  <img src="<%= url_for(@user.avatar) %>%"/>
                <% else %>
                  <%= image_tag("avatar.jpg") %>
                <% end %>
                <p style="margin-bottom: 0px;"><strong><%= @user.name%></strong></p>
                <p style="margin-bottom: 0px;"><%= @user.username %></p>
                <p><%= tweet.tweet %></p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <%= link_to 'Back', url_for(:back), class: "nav-link" %>
  </div>
</div>
