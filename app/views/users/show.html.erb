<div class="section">
  <div class="container">
  <% if @user == current_user %>
      <h2 class="title is-2 text-center">My Profile</h2>
  <% else %>
      <h2 class="title is-2 text-center">User Profile</h2>
  <% end %>
    <div class="card border-primary mb-3" style="max-width: 18rem;">
      <div class="card-body text-primary">
      <% if @user.avatar.attached? %>
            <img src="<%= url_for(@user.avatar) %>%"/>
        <% else %>
            <%= image_tag("avatar.jpg") %>
        <% end %>
        <p style="margin-bottom: 0px;"><strong><%= @user.name%></strong></p>
        <p style="margin-bottom: 0px;"><%= @user.username %></p>
        <p style="margin-bottom: 0px;"><%= @user.email %></p>
        <p>Joined <%= @user.created_at %></p>
        <% if @user == current_user %>
          <%= button_to 'Edit Profile', '/accounts/edit', method: :get, class: "btn btn-outline-primary"%>
        <% end %>
      </div>
    </div>

    <h1>Tweets</h1>

    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Tweet</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tweets.each do |tweet| %>
          <tr>
            <td><%= tweet.tweet %></td>
            <td><%= link_to 'Show', user_tweet_path(tweet.user, tweet) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Back', url_for(:back), class: "nav-link" %>
  </div>
</div>
