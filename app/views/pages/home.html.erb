<div class="section">
  <div class="container">
    <h2 class="page-title">Home</h2>
      <%= render 'form', tweet: @tweet %>

       <table class="table table-hover">
        <tbody>
        <% if !@feed.empty? %>
          <% @feed.each do |tweet| %>
            <tr>
              <td>
                <% if tweet.user.avatar.attached? %>
                  <img class="non-profile-pic" src="<%= url_for(tweet.user.avatar) %>%"/>
                <% else %>
                  <%= image_tag("avatar.jpg", class:"non-profile-pic") %>
                <% end %>
                <p style="margin-bottom: 0px;"><strong><%= tweet.user.name%></strong></p>
                <p style="margin-bottom: 0px;">@<%= tweet.user.username %></p>
                <p><%= tweet.tweet %></p>
              </td>
            </tr>
          <% end %>
        <% else %>
          <p>Create a New Tweet or Follow Someone</p>
        <% end %>
        </tbody>
      </table>
  </div>
</div>